        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        Width="914"
        Height="514"
        x:Class="SBP2.Views.IgrajStazu"
        WindowStartupLocation="CenterScreen"
        Title="IgrajStazu">
        <Window.Background><ImageBrush Source="avares://SBP2/Assets/thumb.jpg"/></Window.Background>
        <StackPanel Name="MainContainer" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" Margin="0 20 0 5">Izaberite stazu za igru</TextBlock>
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12" Margin="0 5 0 20">Dvostruki klik na stazu za pocetak igre</TextBlock>
                <DataGrid Background="White" RowBackground="FloralWhite" DoubleTapped="StazeDataGrid_OnDoubleTapped" HorizontalAlignment="Center" MinHeight="240" MaxHeight="240" Name="StazeDataGrid" Margin="0 20 0 20" IsReadOnly="True" GridLinesVisibility="All" BorderThickness="1" BorderBrush="Aqua"></DataGrid>
        </StackPanel>
</Window>
