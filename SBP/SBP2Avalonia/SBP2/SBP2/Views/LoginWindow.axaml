<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        Width="914"
        Height="514"
        WindowStartupLocation="CenterScreen"
        x:Class="SBP2.Views.LoginWindow"
        Title="LoginWindow">
        <Window.Background><ImageBrush Source="avares://SBP2/Assets/thumb.jpg"/></Window.Background>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20 20">
                <TextBlock HorizontalAlignment="Center" FontSize="24" Margin="20 0 20 20">Login</TextBlock>
                <Label>Username</Label>
                <TextBox Background="FloralWhite" x:Name="UsernameTextBox" Width="200" Margin="0,0,0,10"/>
                <Label>Password</Label>
                <TextBox Background="FloralWhite" x:Name="PasswordBox" Width="200" Margin="0,0,0,10" />
                <Button Background="FloralWhite" Content="Login" Click="ButtonLogin" HorizontalAlignment="Center" Margin="0 0 0 10"/>
                <Button Background="FloralWhite" Content="Go Back" Click="GoBack" HorizontalAlignment="Center" Margin="0 0 0 10"/>
        </StackPanel>
</Window>
